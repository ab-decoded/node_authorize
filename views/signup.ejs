<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="./libs/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" href="./stylesheets/material.css">
    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body>
 

<div class="container">

<div class="col-sm-6 col-sm-offset-3">

    <h1> Signup</h1>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/signup" method="post">
        <div class="form-group">
            <input type="text" class="form-control floating-label" name="name" placeholder="Name">
        </div> 
        <div class="form-group">
            <input type="email" class="form-control floating-label" name="email" placeholder="E-mail">
        </div>
        <div class="form-group">
            <input type="password" class="form-control flaoting-label" name="password" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-warning btn-lg" style="background:#FFB500">Signup</button>
    </form>

    <hr>

    <p>Already have an account? <a href="/login">Login</a></p>

</div>

</div>
<script type="text/javascript" src="libs/jquery/dist/jquery-2.1.3.js"></script>
<script type="text/javascript" src="javascripts/material.js"></script>
</body>
</html>


